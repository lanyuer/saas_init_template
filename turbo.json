{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "outputs": ["packages/database/src/migrations/**"],
      "dependsOn": []
    },
    "db:push": {
      "dependsOn": ["db:generate"]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"]
    }
  },
  "globalDependencies": [".env*"]
}
